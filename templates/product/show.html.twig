{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Pics</th>
                <td>
                    {% for image in product.images %}


                        <div class="col-4">
                            <img src="{{ vich_uploader_asset(image, 'imageFile')|imagine_filter('petite_vignette') }}" alt="">
                        </div>


                    {% endfor %}





                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_image_index', {id:product.id}) }}" class="btn btn-primary">images</a>
    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
