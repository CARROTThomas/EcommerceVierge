{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_category_index') }}"><i class="bi bi-arrow-left me-2"></i>back to list</a>

    <a class="btn btn-warning" href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="bi bi-pencil-fill me-2"></i>edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
